---
import Layout from "@/layouts/Layout.astro";
import { Navbar } from "@/components/Navbar";
import { FadeIn } from "@/components/FadeIn";
import { ContactForm } from "@/components/ContactForm";
import { Footer } from "@/components/Footer";
---

<Layout title="Contact â€” Ravinder Chadha">
	<Navbar activePage="contact" client:load />
	<main class="pt-20">
		<section class="px-6 md:px-8 py-24 md:py-32 max-w-5xl mx-auto">
			<FadeIn client:load>
				<p
					class="text-xs uppercase tracking-[0.2em] text-muted-foreground mb-4 font-medium"
				>
					Contact
				</p>
				<h2
					class="text-3xl md:text-5xl font-bold tracking-tight text-foreground leading-tight max-w-2xl mb-4"
				>
					Let's <em class="font-serif italic font-normal">connect.</em>
				</h2>
				<p class="text-base text-muted-foreground max-w-xl">
					Have a question, a project idea, or just want to say hello? Drop me a
					message and I'll get back to you.
				</p>
			</FadeIn>

			<ContactForm client:load />
		</section>
	</main>
	<Footer client:visible />
</Layout>
